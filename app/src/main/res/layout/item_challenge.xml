<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardElevation="2sp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemChallengeName_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="ChallengeName"
                android:textAlignment="center"
                android:textAppearance="@style/CM_text_style" />

            <ImageView
                android:id="@+id/itemChallenge_ImageView"
                android:layout_width="150sp"
                android:layout_height="100sp"
                android:layout_gravity="center"
                android:layout_marginTop="8sp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tmp_image" />

            <RatingBar
                android:id="@+id/itemChallenge_RatingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8sp"
                android:max="5"
                android:numStars="5"
                android:stepSize="1" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>